---
const {title, description} = Astro.props;

const url = "https://frontier.nukes.in/";
---

<!-- Settings -->
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta charset="utf-8">

<!-- Standard -->
<title>{title}</title>
<meta name="description" content={description}>
<meta name="author" content="Plutonium">
<link rel="icon" href="/icons/frontier.png" type="image/png">
<link rel="icon" href="/icons/frontier.svg" type="image/svg+xml">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content={url}>
<meta property="og:title" content={title}>
<meta property="og:description" content={description}>
<!-- <meta property="og:image" content="https://metatags.io/assets/meta-tags-16a33a6a8531e519cc0936fbba0ad904e52d35f34a46c97a2c9f6f7dd7d336f2.png"> -->

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content={url}>
<meta property="twitter:title" content={title}>
<meta property="twitter:description" content={description}>
<!-- <meta property="twitter:image" content="https://metatags.io/assets/meta-tags-16a33a6a8531e519cc0936fbba0ad904e52d35f34a46c97a2c9f6f7dd7d336f2.png"> -->

<!-- StyleSheets -->
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100;0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
<link rel='stylesheet' href='http://api.nukes.in/cms/css?name=keyframes.css'>
<link rel='stylesheet' href='http://api.nukes.in/cms/css?name=global.css'>
<link rel="stylesheet" href="/css/global.css">

<!-- Preconnects -->
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin comment="for IBM Plex">
<link rel="preconnect" href="https://fonts.googleapis.com" comment="for IBM Plex">
<link rel="preconnect" href="https://api.nukes.in/frontier/">

<!-- Privacy & Anti-SEO -->
<meta name="google" content="nositelinkssearchbox" />
<meta name="google" content="nopagereadaloud" />
<meta name="robots" content="noindex" />
<meta name="twitter:dnt" content="on">
<meta name="rating" content="adult" />